@{
    ViewBag.Title = "StudentAdd";
    Layout = "~/Views/Shared/_Content.cshtml";
}


<script type="text/javascript">
    $(document).ready(function () {
        $("#addStudent").click(function () {
            alert("11");

            var params = {
                studentName: $("#student_name").val(),
                studentNo: $("#student_no").val(),
                studentSex: $("input[name='student_sex']:checked").val(),
                studentSession: $("#student_session").val(),
                studentProfession: $("#student_profession").val(),
                studentClass: $("#student_class").val()
            }

            $.DoAjax("/StudentSub/studentAdd", params, function (jsonData) {
                alert(jsonData.msg);
            }, 'post', true);
        });


    });

</script>


<h2>StudentAdd</h2>
<div>
    <span>学生姓名</span><input type="text" id="student_name" />
    <br />
    <span>学生学号</span><input type="text" id="student_no" />
    <br />
    <span>学生性别</span><input type="radio" name="student_sex" value="1" checked />男 <input type="radio" name="student_sex" value="2" />女
    <br />
    <input type="text" id="student_session" /><span>届</span>
    <br />
    <input type="text" id="student_class" /><span>班级</span>
    <br />
    <span>学生专业</span><input type="text" id="student_profession" />
</div>

<div>
    <input type="button" value="添加学生" id="addStudent" />
    <input type="button" value="重置" id="reset" />
</div>